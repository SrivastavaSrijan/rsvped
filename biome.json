{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["app/**", "components/**", "lib/**", "server/**", "prisma/**"],
		"experimentalScannerIgnores": ["node_modules", ".next"]
	},
	"linter": {
		"enabled": true,
		"domains": {
			"next": "all"
		},
		"rules": {
			"nursery": {
				"noUnknownAtRule": "off",
				"recommended": true
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"trailingCommas": "es5",
			"semicolons": "asNeeded"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"recommended": true
			},
			"recommended": true
		}
	},
	"overrides": [
		{
			"includes": ["components/ui/**"],
			"linter": {
				"rules": {
					"nursery": {
						"recommended": false
					}
				}
			}
		}
	]
}
